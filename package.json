{
  "name": "elysia-template",
  "version": "0.0.2",
  "author": "Caio Fernando <caiofsr@proton.me>",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "auth:secret": "openssl rand -hex 32",
    "auth:generate": "bunx --bun @better-auth/cli generate --config src/common/libs/auth.ts",
    "db:generate": "bun --env-file .env.local --bun drizzle-kit generate",
    "db:migrate": "bun run src/migrate.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "better-auth": "^1.3.18",
    "drizzle-orm": "^0.44.5",
    "elysia": "latest",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/pg": "^8.15.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.5"
  },
  "module": "src/index.js"
}
